{
  "private": true,
  "name": "readit",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "https://github.com/yszk0123/readit.git",
  "author": "Yuji Suzuki <y0suzuki0123@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all clean build:assets -p build:client build:server",
    "build:assets": "cpx 'src/{server/views/**/*.*,public/**/*.*}' dist/",
    "build:client": "node fuse.js",
    "build:server": "tsc -p tsconfig.server.json",
    "clean": "rm -rf dist",
    "start": "echo \"TBI\" && exit 1",
    "start:dev": "npm-run-all clean build:assets build:server -p watch:server start:dev:*",
    "start:dev-old": "json-server -p 3001 --watch data/db.json",
    "start:dev:server": "nodemon --watch ./dist/server --delay 2 ./dist/server/index.js",
    "test": "NODE_ENV=test jest --config jestrc.json",
    "test:ci": "jest --config jestrc.json --coverage && cat ./coverage/lcov.info | coveralls",
    "watch": "npm-run-all build:assets -p watch:client",
    "watch:client": "node fuse.js",
    "watch:server": "tsc -p tsconfig.server.json --watch",
    "watch:test": "NODE_ENV=test jest --config jestrc.json -o"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/redux-logger": "^3.0.3",
    "cpx": "^1.5.0",
    "fuse-box": "^2.2.31",
    "http-proxy-middleware": "^0.17.4",
    "jest": "^21.0.2",
    "json-server": "^0.12.0",
    "nodemon": "^1.12.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.6.1",
    "redux-logger": "^3.0.6",
    "ts-jest": "^21.0.0",
    "typescript": "^2.5.2",
    "uglify-js": "^3.0.28"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/express": "^4.0.37",
    "@types/express-session": "^1.15.3",
    "@types/lodash": "^4.14.74",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.27",
    "@types/passport": "^0.3.4",
    "@types/passport-local": "^1.0.31",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/react-redux": "^5.0.6",
    "@types/redux": "^3.6.0",
    "@types/sequelize": "^4.0.73",
    "@types/serve-favicon": "^2.2.29",
    "axios": "^0.16.2",
    "body-parser": "^1.18.0",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.15.4",
    "express-session": "^1.15.5",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "normalize.css": "^7.0.0",
    "normalizr": "^3.2.3",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "preact": "^8.2.5",
    "preact-compat": "^3.17.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6",
    "sequelize": "^4.8.2",
    "serve-favicon": "^2.4.3",
    "styled-components": "^2.1.2"
  }
