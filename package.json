  "license": "MIT",
  "scripts": {
    "build": "npm-run-all clean -p build:client build:server",
    "build:client": "node fuse.js",
    "build:server": "tsc -p tsconfig.server.json",
    "clean": "rm -rf dist",
    "start": "echo \"TBI\" && exit 1",
    "start:dev": "npm-run-all -p start:dev:* watch:client",
    "start:dev:server": "json-server -p 3001 --watch data/db.json",
    "watch": "npm-run-all clean -p watch:client watch:server",
    "watch:client": "node fuse.js",
    "watch:server": "tsc -p tsconfig.server.json --watch"
  },
  "devDependencies": {
    "@types/redux-logger": "^3.0.3",
    "fuse-box": "^2.2.31",
