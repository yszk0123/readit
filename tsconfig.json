{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ]
  },
  "include": ["./types/**/*", "./src/**/*"],
  "exclude": ["node_modules"]
}
